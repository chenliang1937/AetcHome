<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@null">

    <cn.com.aetc.aetchome.widget.TabIconView
        android:id="@+id/main_bottom_tab_icon"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_28"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/main_bottom_tab_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/main_bottom_tab_icon"
        android:textColor="@color/main_bottom_tab_textcolor_normal"
        android:textSize="@dimen/sp_12.5" />

    <TextView
        android:id="@+id/main_bottom_tab_flag"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:background="@mipmap/ic_remind_small"
        android:layout_alignRight="@+id/main_bottom_tab_icon"
        android:layout_marginRight="@dimen/dp_2"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/main_bottom_tab_num"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:background="@mipmap/ic_remind_large"
        android:layout_alignRight="@+id/main_bottom_tab_icon"
        android:layout_marginRight="@dimen/dp__2"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:visibility="gone"/>

</RelativeLayout>

